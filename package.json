{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "standard",
    "lint:fix": "standard --fix"
  },
  "lint-staged": {
    "**/*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "standard": {
    "env": [
      "jest"
    ],
    "ignore": [
      "**/dist/"
    ]
  },
  "devDependencies": {
    "husky": "^1.2.0",
    "jest": "^23.1.0",
    "lerna": "^2.11.0",
    "lint-staged": "^8.1.0",
    "standard": "^12.0.1"
  }
}
